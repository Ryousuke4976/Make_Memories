<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 form">
      <%= form_for @post, url: end_user_posts_path do |f| %>
        <% if @post.errors.any? %>
          <%= @post.errors.count %>件のエラーが発生しました。
          <% @post.errors.full_messages.each do |message| %>
            <ul>
              <li><%= message %></li>
            </ul>
          <% end %>
        <% end %>

        <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
            <%= f.attachment_field :image %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
            <%= f.text_area :content, class:"form-control", rows:"3", placeholder:"コメントここに" %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
            <%= f.submit "投稿", class:"btn btn-primary btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>