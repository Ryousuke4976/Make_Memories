<div class="container">
  <div class="row">
    <div class="col-sm-4 profile">
      <%= render 'end_user/users/showtemplate', user: @user %>
    </div>
    <div class="col-sm-8">
      <% if @followings.any? %>
        <% @followings.each do |following| %>
          <div class="follow">
            <%= link_to end_user_user_path(following.id) do %>
              <%= attachment_image_tag following, :profile_image, size: "70x70", format: 'jpeg', fallback: "no_image.jpg" %>
              <span class="follow-user"><%= following.name %></span>
            <% end %>
            <span class="follow-button">
              <%= render 'end_user/relations/follow_button', user: following %>
            </span>
            <p><span class="follow-user">introduction  </span><%= following.introduction %></p>
          </div>
        <% end %>
        <%= paginate @followings, class: "paginate" %>
      <% else %>
        <p class="nothing">フォローしてません。</p>
      <% end %>
    </div>
  </div>
</div>