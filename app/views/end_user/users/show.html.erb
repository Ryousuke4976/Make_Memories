<div>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
  <%= @user.name %>
  <%= attachment_image_tag @user, :profile_image, size: "47x47", format: 'jpeg', fallback: "no_image.jpg" %>
  <%= @user.introduction %>
  <% if @user.id == current_user.id %>
    <%= @user.email %>
    <%= link_to 'ユーザ編集', edit_end_user_user_path(@user) %>
    <%= link_to 'アカウント削除', end_user_check_path(@user) %>
  <% end %>
  <%= render 'end_user/relations/follow_button', user: @user %>
</div>
<ul>
  <li>
    <%= link_to end_user_user_path(@user) do %>
        投稿 <%= @user.posts.count %>
    <% end %>
  </li>
  <li>
    <%= link_to end_user_nice_path(@user) do %>
      いいね <%= @user.nices.count %>
    <% end %>
  </li>
  <li>
    <%= link_to end_user_following_path(@user) do %>
      フォロー一覧 <%= @user.followings.count %>
    <% end %>
  </li>
  <li>
    <%= link_to end_user_followed_path(@user) do %>
      フォロワー一覧 <%= @user.followers.count %>
    <% end %>
  </li>
</ul>
<div>
<% if @posts == nil %>
  <p>該当する投稿がありませんでした。</p>
<% else %>
  <% @posts.each do |post| %>
    <div>
      <div>
        <%= link_to end_user_user_path(post.user) do %>
        <%= attachment_image_tag post.user, :profile_image, size: "47x47", format: 'jpeg', fallback: "no_image.jpg" %>
        <%= post.user.name %>
        <% end %>
        <%= post.created_at %>
      </div>
        <%= post.content %>
      <div>
        <% if post.image_id %>
          <%= attachment_image_tag post, :image, :fill, 300, 300 %>
        <% end %>
      </div>
      <div>
        <%= post.comments.count %>
        <%= post.nices.count %>
        <% if post.niced_by?(current_user) %>
          <%= link_to end_user_post_nices_path(post), method: :delete do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
             いいね解除
          <% end %>
        <% else %>
          <%= link_to end_user_post_nices_path(post), method: :post do %>
          <i class="fa fa-heart-o" aria-hidden="true"></i>
          いいね
          <% end %>
        <% end %>
      </div>
      <%= form_for @comment, url: end_user_comments_path do |f| %>
        <%= f.hidden_field :post_id, value: post.id %>
        <%= f.text_field :comment %>
        <%= f.submit "コメント" %>
      <% end %>
      <% Comment.where(post_id: post).each do |comment| %>
        <%= link_to end_user_user_path do %>
          <%= attachment_image_tag comment.user, :profile_image, size: "47x47", format: 'jpeg', fallback: "no_image.jpg" %>
          <%= comment.user.name %>
        <% end %>
          <%= comment.comment %>
      <% end %>
    </div>
  <% end %>
  <%= paginate @posts, class: "paginate" %>
<% end %>
</div>