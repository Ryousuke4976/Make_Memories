<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 form">
      <%= form_for @user, url: end_user_user_path do |f| %>
        <% if @user.errors.any? %>
          <h2>
            <%= @user.errors.count %> 件の error がありました。
          </h2>
          <% @user.errors.full_messages.each do |error| %>
          <ul>
            <li><%= error %></li>
          </ul>
          <% end %>
        <% end %>
        <div class="a-form">
          <label>名前 :    </label>
          <%= f.text_field :name, autofocus: true, required: true, placeholder: "名前" %>
        </div>
        <div class="a-form">
          <label>プロフィール画像 :</label>
          <span class="image-field"><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><span>
        </div>
        <div class="a-form">
          <label>紹介文 :   </label>
          <%= f.text_field :introduction, placeholder: "自己紹介" %>
        </div>
        <div class="a-form">
          <%= f.submit '変更', class:"btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>