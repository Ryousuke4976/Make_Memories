<div class="container">
  <div class="row">
    <div class="col-sm-4 profile">
      <%= render 'end_user/users/showtemplate', user: @user %>
    </div>
    <div class="col-sm-8">
      <% unless @users.any? %>
        <div class="nothing">
          <p>ユーザはいませんでした。</p>
          <%= link_to 'ユーザ一覧へ', admin_users_path, class:"btn btn-default" %>
        </div>
      <% else %>
        <% @users.each do |user| %>
          <div class="col-sm-10 col-sm-offset-1 index-user">
            <%= link_to end_user_user_path(user) do %>
              <%= attachment_image_tag user, :profile_image,  size: "60x60", format: 'jpeg', fallback: "no_image.jpg" %>
              <%= user.name %>
            <% end %>
          </div>
        <% end %>
        <%= paginate @users, class: "paginate" %>
      <% end %>
    </div>
  </div>
</div>