<!DOCTYPE html>
<html>
  <head>
    <title>MakeMemories</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if admin_signed_in? %>
      <div class="container">
        <h1>MakeMemories</h1>
        <div class="row underbar header">
          <%= link_to 'ログアウト', destroy_admin_session_path,method: :delete, class: "col-sm-1 header" %>
          <%= link_to 'ユーザ一覧', admin_users_path, class: "col-sm-1 header" %>
          <%= link_to '投稿一覧', admin_posts_path, class: "col-sm-1 header" %>
          <%= link_to '概要', admin_abouts_path, class: "col-sm-1 header" %>
          <%= link_to '概要追加', new_admin_about_path, class: "col-sm-1 header" %>
          <%= form_tag("/admin/posts", method: :'get') do %>
            <%= text_field_tag :search %>
              <span class="form-group-btn col-sm-3">
                <%= submit_tag '検索', :name => nil, class: "btn btn-default search-btn header" %>
              </span>
          <% end %>
          <%= form_tag("/admin/users", method: :'get') do %>
            <%= text_field_tag :search %>
              <span class="form-group-btn col-sm-3 header">
                <%= submit_tag '検索', :name => nil, class: "btn btn-default search-btn" %>
              </span>
          <% end %>
        </div>
      </div>
    <% elsif user_signed_in? %>
    <div class="container">
      <h1>MakeMemories</h1>
      <div class="row underbar">
        <%= link_to 'ログアウト', destroy_user_session_path, metod: :delete, class:"col-sm-1 btn btn-warning header" %>
        <%= link_to '新規投稿', new_end_user_post_path, class:"col-sm-1 btn btn-default header" %>
        <%= link_to '投稿一覧', end_user_posts_path, class:"col-sm-1 btn btn-default" %>
        <%= link_to 'ユーザ詳細', end_user_user_path(current_user), class:"col-sm-1 btn btn-default header" %>
        <%= link_to '概要', end_user_about_path, class:"col-sm-1 btn btn-default  header" %>
      </div>
    </div>
    <% else %>
      <h1>ようこそ</h1>
      <div class="container">
        <%= link_to 'ユーザログイン', new_user_session_path, class:"col-sm-2 btn btn-default session header" %>
        <%= link_to '登録', new_user_registration_path, class:"col-sm-2 btn btn-default header" %>
      </div>
    <% end %>
    <div class="main">
      <%= yield %>
    </div>
    <div class="footer">
      <p>© 2019 Chiba Inc</p>
    </div>
  </body>
</html>
