<!DOCTYPE html>
<html>
  <head>
    <title>MakeMemories</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if admin_signed_in? %>
      <h1>MakeMemories</h1>
      <%= link_to 'ログアウト', destroy_admin_session_path,method: :delete %>
      <%= link_to 'ユーザ一覧', admin_users_path %>
      <%= link_to '投稿一覧', admin_posts_path %>
      <%= link_to '概要', admin_abouts_path %>
      <%= form_tag("/admin/posts", method: :'get') do %>
        <%= text_field_tag :search %>
          <span class="form-group-btn">
            <%= submit_tag '検索', :name => nil, class: "btn btn-default search-btn" %>
          </span>
      <% end %>
      <%= form_tag("/admin/users", method: :'get') do %>
        <%= text_field_tag :search %>
          <span class="form-group-btn">
            <%= submit_tag '検索', :name => nil, class: "btn btn-default search-btn" %>
          </span>
      <% end %>
    <% elsif user_signed_in? %>
      <h1>MakeMemories</h1>
      <%= link_to 'ログアウト', destroy_user_session_path, metod: :delete %>
      <%= link_to '新規投稿', new_end_user_post_path %>
      <%= link_to '投稿一覧', end_user_posts_path %>
      <%= link_to 'ユーザ詳細', end_user_user_path(current_user) %>
      <%= link_to '概要', end_user_about_path %>
    <% else %>
      <h1>ようこそ</h1>
    <% end %>
    <%= yield %>
    <div>
      <p>© 2018 nagano music Inc</p>
    </div>
  </body>
</html>
