<h1>概要追加</h1>
  <div class="container">
    <div class="row">
      <div class="form col-sm-6 col-sm-offset-3">
        <%= form_for @about, url: admin_abouts_path do |f| %>
          <% if @about.errors.any? %>
            <%= @about.errors.count %>件のエラーが発生しました。
            <% @about.errors.full_messages.each do |message| %>
              <ul>
                <li><%= message %></li>
              </ul>
            <% end %>
          <% end %>
          <div class="text-center">
            <span class="form-label">内容 : </span><%= f.text_area :content %>
          </div>
          <div class="text-center">
            <%= f.submit '追加', class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>